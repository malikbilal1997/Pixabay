<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pixabay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="materialAlertDialogTheme">@style/AlertDialog</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextBoldNormal">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>


    <style name="TextBoldSmall">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>


    <style name="TextMediumSmall">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="TextMediumNormal">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextRegularNormal">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="textAllCaps">false</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="cornerRadius">@dimen/_8sdp</item>

        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>

    </style>

    <style name="UnelevatedButtonSmall" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="textAllCaps">false</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="cornerRadius">@dimen/_8sdp</item>

        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>

    </style>

    <!-- Alert Dialog Styling -->

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">

        <item name="android:windowMinWidthMinor">100%</item>
        <item name="shapeAppearanceOverlay">@style/AlertDialog.Shape</item>

    </style>

    <style name="AlertDialog.Shape" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>

    </style>

</resources>